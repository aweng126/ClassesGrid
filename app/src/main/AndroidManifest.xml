<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kingwen.classesgrid">

    <application
        android:name=".Utils.ShareClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

       <activity android:name=".Activities.BaseActivity"></activity>

        <activity android:name=".Activities.LoginActivity"></activity>

        <activity android:name=".Activities.LeadInClassActivity"></activity>

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Utils.ExitLineReceiver">
            <intent-filter>
                <action android:name="com.example.kingwen.classesgrid.EXItLINERECEIVER"></action>
            </intent-filter>
        </receiver>

    </application>


</manifest>
